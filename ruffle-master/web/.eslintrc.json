{
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "commonjs": true
    },
    "rules": {
        "no-console": "off",
        "no-constant-condition": ["error", { "checkLoops": false }]
    },
    "globals": {
        "navigator": true
    }
}
